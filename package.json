{
    "name": "earmarked",
    "description": "Earmarked is a two column blogging theme for Ghost",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Portweb",
        "email": "info@portweb.dev",
        "url": "https://portweb.dev/earmarked"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 1170
            }
        },
        "card_assets": true,
        "custom": {
            "footer_text": {
                "type": "text"
            }
        }
    }
}
